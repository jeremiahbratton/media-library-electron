{
  "name": "app-of-holding",
  "version": "1.0.0",
  "description": "Desktop application for cataloging the things I purchase instead of spending time with other people.",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "playwright test",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "media",
    "catalog",
    "collectibles"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "bulma": "^1.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.appofholding.media-catalog",
    "productName": "App of holding",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "db/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
